<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New User</title>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
  <style>

  </style>
</head>
<body>
  <ul class="nav nav-tabs">
    <li role="presentation">
        <a href="/dashboard">Home</a>
      </li>
       <li role="presentation">
        <a href="/yourproducts">Products</a>
      </li>
    <li role="presentation">
        <a href="/products">Add Products</a>
      </li>
      <li role="presentation">
        <a href="/orders">Orders</a>
      </li>
      <li role="presentation" class="active">
        <a href="/customers">Customers</a>
      </li>
      <li role="presentation">
        <a href="/">Logout</a>
      </li>
       <li>
        <a class="move_right_name" data-toggle="dropdown">@ViewBag.User_one.first_name</a>
        </li>
    </ul>
  <div class="container">
        <div class="row">
          <div class="col-md-4">
            <h1>Add New Customer</h1>
            <form action='createNewUser' method="Post">
            <div class="form-group">
              <label for="email">Email Address</label>
              <input name="email" type="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input name="first_name" type="text" class="form-control" id="firstName" placeholder="First Name">
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input name="last_name" type="text" class="form-control" id="lastName" placeholder="Last Name">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input name="password" type="password" class="form-control" id="password" placeholder="Password">
            </div>
            <div class="form-group">
              <label for="cPassword">Confirm Password</label>
              <input name="confirm_password" type="password" class="form-control" id="cPassword" placeholder="Confirm password">
            </div>
            <button type="submit" class="btn btn-default">Create Customer</button>
          </form>
          </div>
          <ul>
            @{
                if(ViewBag.errors != null){
                    foreach(var error in ViewBag.errors){
                    <p class="errors">@error</p>
                    }
                }   
            } 
        </ul>
    <br><br><br>
    <div class="col-md-6">
  <table class='table'>
    <thead>
      <th>Customer Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
    </thead>
    <tbody>
    @{
        foreach(var All_users in ViewBag.All_Users){
        <tr>
            <td>@All_users.first_name @All_users.last_name</td>
            <td> @All_users.email </td>
            <td> @All_users.created_at.ToString("MMMMdd,yyyy")</td>
            <td>
                <a href="/delete/@All_users.id" onclick="return confirm('Are you sure you want to remove this Customer?');">Remove</a>
            </td>
        </tr>
        }
    }
  </tbody>
  </table>
        </div>
      </div>
    </div>
</body>
</html>
